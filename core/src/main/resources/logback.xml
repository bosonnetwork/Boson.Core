<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{32} - %msg %ex{full}%n</pattern>
    </encoder>
  </appender>

  <logger name="elastos.carrier.kademlia.NetworkEngine" level="INFO"/>
  <logger name="elastos.carrier.kademlia.RPCServer" level="INFO"/>

  <root level="trace">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>