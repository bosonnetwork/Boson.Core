#!/bin/sh

set -e

case "$1" in
  upgrade) 
  ;;
  install|abort-upgrade)
  ;;
  *)
    echo "preinst called with unknown argument '$1'" >&2
    exit 1
  ;;
esac

# Begin preinst
if ( [ "$1" = "install" ] || [ "$1" = "upgrade" ] ) && [ -d /usr/lib/boson ]; then
	if [ -x "/etc/init.d/boson" ]; then
		invoke-rc.d boson stop || exit $?
	fi
	
	if [ -d /run/systemd/system ]; then
		deb-systemd-invoke stop 'boson.service' >/dev/null || true
	fi

	if [ -d /usr/lib/boson/lib ]; then
		BACKUP_DIR=/usr/lib/boson/lib/backup-`date +"%Y%m%d%H%M%S"`
		mkdir $BACKUP_DIR
		mv /usr/lib/boson/lib/*.jar $BACKUP_DIR 2>/dev/null || true
	fi
fi
# End preinst

exit 0