#!/bin/sh

set -e

case "$1" in
  purge)
    if [ -d /usr/lib/boson ]; then
      rm -rf /usr/lib/boson
    fi
    if [ -d /var/run/boson ]; then
      rm -rf /var/run/boson
    fi
    if [ -d /var/log/boson ]; then
      rm -rf /var/log/boson
    fi
    if [ -d /var/lib/boson ]; then
      # Not purge the boson key and id files
      find /var/lib/boson -type f -not \( -name 'id' -or -name 'key' \) -print0 | xargs -0 -I {} rm -rf {}
      rmdir /var/lib/boson 2>/dev/null || true
    fi
  ;;
esac

# Begin postrm_init
if [ "$1" = "purge" ] ; then
	update-rc.d boson remove >/dev/null
fi
# End postrm_init

# Begin postrm_systemd
if [ -d /run/systemd/system ]; then
	systemctl --system daemon-reload >/dev/null || true
fi

if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'boson.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'boson.service' >/dev/null || true
		deb-systemd-helper unmask 'boson.service' >/dev/null || true
	fi
fi
# End postrm_systemd
