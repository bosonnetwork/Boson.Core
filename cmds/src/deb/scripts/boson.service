[Unit]
Description=Boson Daemon
After=network-online.target

[Service]
Type=simple
RuntimeDirectory=boson
RuntimeDirectoryMode=755
WorkingDirectory=/var/lib/boson
ExecStart=java -cp "/usr/lib/boson/lib/*" -Dlogback.configurationFile=/etc/boson/logback.xml io.bosonnetwork.launcher.Main --config /etc/boson/default.conf
User=boson
Group=boson
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target